#include<stdio.h>
int main()
{
 int Size, i, j = 0, a[10];
 int Even_Sum = 0, Odd_Sum = 0,k;
 
 printf("\n  Enter the Size of an Array : ");
 scanf("%d", &Size);
 
 printf("\n Enter the Array Elements\n");
 for(i = 0; i < Size; i++)
 {
      scanf("%d", &a[i]);
 } 

 	Even_Sum = Even_Sum + a[0]+a[2]+a[4];
   

   
 	Odd_Sum = Odd_Sum + a[1]+a[3];
  
 
 printf("\n The Sum of Even Numbers in this Array = %d ", Even_Sum);
 printf("\n The Sum of Odd Numbers in this Array = %d ", Odd_Sum);
 k=Even_Sum-Odd_Sum;
 printf("differe between sum of even index and odd index is:%d",k);
 
 return 0;
}
